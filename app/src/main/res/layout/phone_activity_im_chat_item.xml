<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="7dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="#ebebeb"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="3dp"
            android:text="昨天 21:20"
            android:textColor="#999999" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp" >

        <ImageView
            android:id="@+id/iv_otherPic"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginTop="19dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_myPic"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="19dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_otherName"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginBottom="3dp"
            android:layout_toLeftOf="@id/iv_myPic"
            android:layout_toRightOf="@id/iv_otherPic"
            android:gravity="center_vertical|left"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:text="CL小仙"
            android:textColor="#a2a2a2"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/tv_messageContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_otherName"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/iv_myPic"
            android:layout_toRightOf="@id/iv_otherPic" >

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_msg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#12a5f4"
                android:padding="10dp"
                android:text="An甜甜长"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:visibility="gone" />

            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_msg_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#12a5f4"
                android:padding="6dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone" 
                />

            <TextView
                android:layout_alignParentRight="true"
                android:visibility="visible" 
                android:id="@+id/tv_msg_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#12a5f4"
                android:drawableLeft="@mipmap/rooms_third_settings_welcominfo_open"
                android:gravity="left|center_vertical"
                android:padding="3dp"
                android:paddingLeft="50dp"
                android:text=" 18″  "
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>